@{
    ViewBag.Title = "Orders";
}
    <div class="content">
        <h1>SPA Test Task</h1>
        <div class="new-order-container">
            <h2>Create New Order form</h2>
            @{Html.RenderPartial("~/Views/Partials/NewOrderForm.cshtml"); }
        </div>
        <div class="exist-orders-container">
            <div class="orders">
                @{
                    if (Model.Count > 0)
                    {
                        <h2>Existed Orders</h2>
                        foreach (SPAWebClient.Models.OrderViewModel order in Model)
                        {
                            Html.RenderPartial("~/Views/Partials/Order.cshtml", order);
                        }
                    }
                    else 
                    {
                        <p>Order list is empty</p>
                    }
                }
            </div>
        </div>
    </div>
